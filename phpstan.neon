parameters:
    level: 8
    paths:
        - src
        - tests
    excludePaths:
        - vendor
    reportUnmatchedIgnoredErrors: false
    ignoreErrors:
        # Allow dynamic property access for config arrays
        - '#Cannot access offset .* on mixed#'
        # Allow casting mixed to string in config handling
        - '#Cannot cast mixed to string#'
        # Allow mixed parameter types in exception factory
        - '#Parameter .* of class RenderScreenshot\\RenderScreenshotException constructor expects string, mixed given#'
        # Allow flexible return types for API responses (runtime validation)
        - '#Method .* should return array\{.*\} but returns array<.*>#'
        # Test files: allow json_encode usage
        - '#Parameter .* of class GuzzleHttp\\Psr7\\Response constructor expects .*, string\|false given#'
        # Test files: allow mixed in assertions
        - '#Parameter .* of method PHPUnit\\Framework\\Assert::.* expects .*, mixed given#'
