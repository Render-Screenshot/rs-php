{
    "name": "renderscreenshot/renderscreenshot",
    "description": "Official PHP SDK for RenderScreenshot - Screenshot API for developers",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "screenshot",
        "api",
        "renderscreenshot",
        "browser",
        "pdf",
        "og-image",
        "social-card"
    ],
    "authors": [
        {
            "name": "Michael Brooks",
            "email": "michael@renderscreenshot.com"
        }
    ],
    "homepage": "https://renderscreenshot.com",
    "support": {
        "docs": "https://renderscreenshot.com/docs/sdks/php",
        "issues": "https://github.com/render-screenshot/rs-php/issues"
    },
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "RenderScreenshot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RenderScreenshot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
